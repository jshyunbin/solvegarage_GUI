<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<VBox xmlns:fx="http://javafx.com/fxml/1" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
      minWidth="-Infinity" prefHeight="719.0" prefWidth="510.0" xmlns="http://javafx.com/javafx/8.0.171"
      fx:controller="src.scene.post.PostController">
    <children>
        <Label text="POST">
            <font>
                <Font size="48.0"/>
            </font>
        </Label>
        <Separator prefWidth="200.0"/>
        <TextField fx:id="title" promptText="Set the title of your problem">
            <VBox.margin>
                <Insets bottom="10.0"/>
            </VBox.margin>
        </TextField>
        <TextArea fx:id="problemDescription" prefHeight="200.0" prefWidth="200.0"
                  promptText="Tell me more about your problem.">
            <VBox.margin>
                <Insets bottom="10.0"/>
            </VBox.margin>
        </TextArea>
        <TextField fx:id="tags" promptText="#add #tags">
            <VBox.margin>
                <Insets bottom="10.0"/>
            </VBox.margin>
        </TextField>
        <HBox prefHeight="22.0" prefWidth="510.0">
            <children>
                <Label prefHeight="15.0" prefWidth="267.0" text="How long will your answer be private?">
                    <HBox.margin>
                        <Insets bottom="10.0"/>
                    </HBox.margin>
                </Label>
                <Slider fx:id="slider">
                    <HBox.margin>
                        <Insets left="10.0"/>
                    </HBox.margin>
                </Slider>
                <Label text="number" fx:id="number">
                    <HBox.margin>
                        <Insets left="10.0"/>
                    </HBox.margin>
                </Label>
            </children>
        </HBox>
        <TextArea fx:id="answer" prefHeight="241.0" prefWidth="490.0" promptText="Show me your answer!"/>
        <Button fx:id="submitBtn" mnemonicParsing="false"
                style="-fx-background-color: lightgreen; -fx-background-radius: 10px;" text="SUBMIT">
            <font>
                <Font size="18.0"/>
            </font>
            <VBox.margin>
                <Insets left="400.0" top="10.0"/>
            </VBox.margin>
        </Button>
        <Label text="Your problem is posted under SOLVEGARAGE's licence. ">
            <VBox.margin>
                <Insets left="80.0" top="30.0"/>
            </VBox.margin>
        </Label>
    </children>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="20.0"/>
    </padding>
</VBox>
